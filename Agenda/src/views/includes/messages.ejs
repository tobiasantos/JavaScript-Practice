<% if (errors.length> 0) { %>
  <div id="error-message" class="row">
    <div class="col my-3">
      <div class="alert alert-danger">
        <% errors.forEach(erro=> { %>
          <%= erro %><br>
            <% }); %>
      </div>
    </div>
  </div>
  <% } %>
    <% if (success.length> 0) { %>
      <div id="success-message" class="row">
        <div class="col my-3">
          <div class="alert alert-success">
            <%= success %>
          </div>
        </div>
      </div>
      <% } %>